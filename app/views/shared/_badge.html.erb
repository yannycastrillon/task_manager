<%# _badge.html.erb - Displays the user's role in a styled badge %>
<%
  role = local_assigns[:role]
  status = local_assigns[:status]
  # Define badge colors based on role
  if role.present?
    badge_color_class = case role.downcase
                        when "admin"
                          "bg-red-100 text-red-800"
                        when "team lead"
                          "bg-blue-100 text-blue-800"
                        when "member"
                          "bg-green-100 text-green-800"
                        else
                          "bg-gray-100 text-gray-800"
                        end
  elsif status.present?
    badge_color_class = case status.downcase
                        when "scheduled"
                          "bg-gray-100 text-gray-800"
                        when "completed"
                          "bg-green-100 text-green-800"
                        when "scheduled"
                          "bg-gray-100 text-gray-800"
                        when "in_progress"
                          "bg-yellow-100 text-yellow-800"
                        when "pending"
                          "bg-blue-100 text-blue-800"
                        when "cancelled"
                          "bg-red-100 text-red-800"
                        else
                          "bg-gray-100 text-gray-800"
                        end
  end
%>

<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= badge_color_class %>">
  <%= role || status %>
</span> 
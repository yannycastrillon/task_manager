<%# app/views/shared/_task.html.erb %>
<%# Accepts: tasks: (collection of Task objects), cleaning_assignment: (optional) %>
<div class="bg-gradient-to-br from-gray-700 to-gray-800 p-6 rounded-xl border border-gray-600">
  <h3 class="font-semibold text-white mb-4">Tasks</h3>
  <div class="flex flex-col gap-4">
    <% (local_assigns[:tasks] || [task]).each do |task| %>
      <%= render partial: "shared/task_card", locals: { task: task, cleaning_assignment: local_assigns[:cleaning_assignment] } %>
    <% end %>
  </div>
</div>

<div class="bg-gray-700 rounded-xl border border-gray-600 shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5">
  <%= link_to task_path(task), class: "block p-6" do %>
    <%# Header with Title and Priority %>
    <div class="flex justify-between items-start mb-4">
      <h3 class="text-lg font-semibold text-white">
        <%= truncate(task.title, length: 35) %>
      </h3>
    </div>
    
    <%# Description (optional) %>
    <% if task.description.present? %>
      <p class="text-gray-300 text-sm mb-4 line-clamp-2"><%= task.description %></p>
    <% end %>
  <% end %>

  <%# Action Icons %>
  <div class="flex items-center justify-center space-x-4 pt-2 border-t border-gray-600">
    <%# View Icon %>
    <%= link_to task_path(task), class: "p-2 text-blue-400 hover:text-blue-500 hover:bg-blue-900/20 rounded-full transition-colors" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
      </svg>
    <% end %>

    <%# Edit Icon %>
    <%= link_to edit_task_path(task), class: "p-2 text-gray-400 hover:text-gray-500 hover:bg-gray-900/20 rounded-full transition-colors" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
      </svg>
    <% end %>
  </div>
</div> 
<% content_for :title, @task.title %>

<div class="min-h-screen flex flex-col justify-center items-center bg-gradient-to-r from-indigo-100 via-purple-100 to-pink-100 px-4">
  <div class="bg-white p-8 sm:p-12 rounded-lg shadow-xl w-full max-w-screen-lg mx-auto">
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900"><%= @task.title %></h1>
        <p class="mt-2 text-base sm:text-lg text-gray-600">Task Details</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to edit_task_path(@task), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
          </svg>
          Edit Task
        <% end %>
        <%= button_to @task, method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200", data: { turbo_confirm: "Are you sure?" } do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          Delete Task
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      <%# Main Content Card %>
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
          <div class="p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">Description</h2>
            <p class="text-base text-gray-600 whitespace-pre-wrap"><%= @task.description %></p>
          </div>
        </div>
      </div>

      <%# Sidebar Card %>
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
          <div class="p-6 space-y-6">
            <div>
              <h2 class="text-lg font-medium text-gray-900 mb-4">Task Details</h2>
              <div class="space-y-4">
                <div>
                  <h3 class="text-sm font-medium text-gray-500">Priority</h3>
                  <p class="mt-1">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case @task.priority
                          when 'high' then 'bg-red-100 text-red-800'
                          when 'medium' then 'bg-yellow-100 text-yellow-800'
                          else 'bg-green-100 text-green-800'
                          end %>">
                      <%= @task.priority.titleize %>
                    </span>
                  </p>
                </div>

                <div>
                  <h3 class="text-sm font-medium text-gray-500">Status</h3>
                  <p class="mt-1 text-base text-gray-900"><%= @task.status.titleize %></p>
                </div>

                <div>
                  <h3 class="text-sm font-medium text-gray-500">Due Date</h3>
                  <p class="mt-1 text-base text-gray-900">
                    <%= @task.due_date&.strftime("%B %d, %Y") || "No due date" %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-8">
      <%= link_to "Back to Tasks", tasks_path, class: "text-indigo-600 hover:text-indigo-900 transition-colors duration-200" %>
    </div>
  </div>
</div>

<% content_for :title, "Task Details" %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <%# Header Card %>
    <div class="bg-gray-800 rounded-2xl shadow-2xl border border-gray-700 overflow-hidden">
      <%# Task Title %>
      <div class="bg-gradient-to-r from-gray-900 via-slate-900 to-gray-900 px-6 sm:px-8 py-8 sm:py-12 text-center relative">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 via-transparent to-blue-600/10"></div>
        <div class="relative">
          <div class="flex justify-center mb-4">
            <div class="bg-blue-600/20 backdrop-blur-sm rounded-full p-4 border border-blue-500/30">
              <svg class="w-8 sm:w-10 h-8 sm:h-10 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M2.625 6.75a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0zm4.875 0A.75.75 0 018.25 6h12a.75.75 0 010 1.5h-12a.75.75 0 01-.75-.75zM2.625 12a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0zM7.5 12a.75.75 0 01.75-.75h12a.75.75 0 010 1.5h-12A.75.75 0 017.5 12zm-4.875 5.25a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0zm4.875 0a.75.75 0 01.75-.75h12a.75.75 0 010 1.5h-12a.75.75 0 01-.75-.75z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
          <h1 class="text-lg sm:text-2xl md:text-4xl font-bold text-white mb-2">
            <%= @task.title %>
          </h1>
          <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
          <p class="text-gray-400 text-xs sm:text-sm mt-4">Task Template Details</p>
        </div>
      </div>

      <%# Task Details %>
      <div class="p-6 sm:p-8 bg-gray-800">
        <%# Quick Actions Bar %>
        <div class="flex flex-wrap gap-2 mb-8 p-4 bg-gray-700/30 rounded-xl border border-gray-600/50 justify-between items-center">
          <%= link_to edit_task_path(@task), class: "flex items-center space-x-2 px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors text-sm text-gray-300" do %>
            <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            <span>Edit Template Task</span>
          <% end %>
        </div>

        <div class="flex flex-col gap-4">
          <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
            <div class="bg-blue-600/20 rounded-full p-3 border border-blue-500/30">
              <svg class="w-5 h-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-white mb-1">Description</h3>
              <p class="text-gray-300 leading-relaxed break-words"><%= @task.description %></p>
            </div>
          </div>
          <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
            <div class="bg-green-600/20 rounded-full p-3 border border-green-500/30">
              <svg class="w-5 h-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-white mb-1">Quantity</h3>
              <p class="text-gray-300"><%= @task.quantity %></p>
            </div>
          </div>
          <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
            <div class="bg-yellow-600/20 rounded-full p-3 border border-yellow-500/30">
              <svg class="w-5 h-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-white mb-1">Location (Perform task)</h3>
              <p class="text-gray-300"><%= @task.location.titleize %></p>
            </div>
          </div>
          <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
            <div class="bg-yellow-600/20 rounded-full p-3 border border-yellow-500/30">
              <svg class="w-5 h-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 8v4l3 3m6-3a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"></path>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-white mb-1">Estimated Duration</h3>
              <p class="text-gray-300"><%= @task.estimated_duration %> minutes</p>
            </div>
          </div>
          <div class="flex flex-col sm:flex-row sm:space-x-8 mt-6">
            <span class="text-xs text-gray-500">Created: <%= @task.created_at.strftime('%B %d, %Y %H:%M') %></span>
          </div>
        </div>

        <%# CTA Buttons %>
        <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-700">
          <%= link_to edit_task_path(@task), class: "flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 border border-red-500/30 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-800" do %>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            <span>Edit Template Task</span>
          <% end %>

          <%= button_to task_path(@task), method: :delete, class: "flex-1 bg-gray-700 hover:bg-red-600 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 border border-gray-600 hover:border-red-500 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-800", data: { turbo_confirm: "Are you sure you want to delete this task? This action cannot be undone." } do %>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
            <span>Delete Task</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :title, "Edit Template Task" %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <%# Header Card %>
    <div class="bg-gray-800 rounded-2xl shadow-2xl border border-gray-700 overflow-hidden mb-8">
      <div class="bg-gradient-to-r from-gray-900 via-slate-900 to-gray-900 px-6 sm:px-8 py-8 sm:py-12 text-center relative">
        <div class="absolute inset-0 bg-gradient-to-r from-red-600/10 via-transparent to-red-600/10"></div>
        <div class="relative">
          <div class="flex justify-center mb-4">
            <div class="bg-red-600/20 backdrop-blur-sm rounded-full p-4 border border-red-500/30">
              <svg class="w-8 sm:w-10 h-8 sm:h-10 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z" />
              </svg>
            </div>
          </div>
          <h1 class="text-2xl sm:text-4xl font-bold text-white mb-2">Edit Template Task</h1>
          <div class="w-24 h-1 bg-red-600 mx-auto rounded-full"></div>
          <p class="text-gray-400 text-sm mt-4">Update your task details.</p>
        </div>
      </div>
    </div>

    <%= render "form", task: @task %>

    <div class="mt-8 flex justify-center space-x-4">
      <%= link_to "Show Task", @task, class: "rounded-md border border-gray-600 bg-gray-700 py-3 px-6 text-base font-medium text-gray-300 shadow-sm hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800" %>
      <%= link_to "Back to Tasks", tasks_path, class: "rounded-md border border-gray-600 bg-gray-700 py-3 px-6 text-base font-medium text-gray-300 shadow-sm hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800" %>
    </div>
  </div>
</div>

<% content_for :title, "Business Details" %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <%# Header Card %>
    <div class="bg-gray-800 rounded-2xl shadow-2xl border border-gray-700 overflow-hidden">
      <%# Business Title %>
      <div class="bg-gradient-to-r from-gray-900 via-slate-900 to-gray-900 px-6 sm:px-8 py-8 sm:py-12 text-center relative">
        <div class="absolute inset-0 bg-gradient-to-r from-red-600/10 via-transparent to-red-600/10"></div>
        <div class="relative">
          <div class="flex justify-center mb-4">
            <div class="bg-red-600/20 backdrop-blur-sm rounded-full p-4 border border-red-500/30">
              <svg class="w-8 sm:w-10 h-8 sm:h-10 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M5.223 2.25c-.497 0-.974.198-1.325.55l-1.3 1.298A3.75 3.75 0 007.5 9.75c.627.47 1.406.75 2.25.75.844 0 1.624-.28 2.25-.75.626.47 1.406.75 2.25.75.844 0 1.623-.28 2.25-.75a3.75 3.75 0 004.902-5.652l-1.3-1.299a1.875 1.875 0 00-1.325-.549H5.223z" />
                <path fill-rule="evenodd" d="M3 20.25v-8.755c1.42.674 3.08.673 4.5 0A5.234 5.234 0 019.75 12c.804 0 1.568-.182 2.25-.506a5.234 5.234 0 002.25.506c.804 0 1.567-.182 2.25-.506 1.42.674 3.08.675 4.5.001v8.755h.75a.75.75 0 010 1.5H2.25a.75.75 0 010-1.5H3zm3-6a.75.75 0 01.75-.75h3a.75.75 0 01.75.75v3a.75.75 0 01-.75.75h-3a.75.75 0 01-.75-.75v-3zm8.25-.75a.75.75 0 00-.75.75v5.25c0 .414.336.75.75.75h3a.75.75 0 00.75-.75v-5.25a.75.75 0 00-.75-.75h-3z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
          <h1 class="text-lg sm:text-2xl md:text-4xl font-bold text-white mb-2">
            <%= @business.name %>
          </h1>
          <div class="w-24 h-1 bg-red-600 mx-auto rounded-full"></div>
          <p class="text-gray-400 text-xs sm:text-sm mt-4">Last updated <%= @business.updated_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>

      <%# Business Details %>
      <div class="p-6 sm:p-8 bg-gray-800">
        <%# Quick Actions Bar %>
        <div class="flex flex-wrap gap-2 mb-8 p-4 bg-gray-700/30 rounded-xl border border-gray-600/50 justify-between items-center">
          <a href="<%= @business.website %>" target="_blank" class="flex items-center space-x-2 px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors text-sm text-gray-300">
            <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
            <span>Visit Website</span>
          </a>
          
          <%# Status Badge %>
          <% if @business.status == 'active' %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-500/20 text-green-400 border border-green-500/30">
              <div class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></div>
              Active
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-700/30 text-gray-400 border border-gray-600/50">
              <div class="w-2 h-2 bg-gray-400 rounded-full mr-2"></div>
              Inactive
            </span>
          <% end %>
        </div>

        <h2 class="text-base sm:text-xl md:text-2xl font-semibold text-white mb-4 flex items-center">
          Business Information
        </h2>
        
        <div class="grid gap-4 sm:gap-6 mb-10">
          <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
            <div class="bg-red-600/20 rounded-full p-3 border border-red-500/30 group-hover:bg-red-600/30 transition-colors">
              <svg class="w-5 h-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-white mb-1 text-sm sm:text-base">Address</h3>
              <p class="text-gray-300 leading-relaxed break-words text-xs sm:text-sm"><%= @business.address %></p>
            </div>
          </div>

          <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
            <div class="bg-red-600/20 rounded-full p-3 border border-red-500/30 group-hover:bg-red-600/30 transition-colors">
              <svg class="w-5 h-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-medium text-white mb-1">Phone</h3>
              <a href="tel:<%= @business.phone %>" class="text-gray-300 hover:text-white transition-colors">
                <%= @business.phone %>
              </a>
            </div>
          </div>

          <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
            <div class="bg-red-600/20 rounded-full p-3 border border-red-500/30 group-hover:bg-red-600/30 transition-colors">
              <svg class="w-5 h-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-white mb-1">Email</h3>
              <a href="mailto:<%= @business.email %>" class="text-gray-300 hover:text-white transition-colors break-all">
                <%= @business.email %>
              </a>
            </div>
          </div>

          <% if @business.notes.present? %>
            <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
              <div class="bg-red-600/20 rounded-full p-3 border border-red-500/30 group-hover:bg-red-600/30 transition-colors">
                <svg class="w-5 h-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                  <polyline points="14 2 14 8 20 8"></polyline>
                  <line x1="16" y1="13" x2="8" y2="13"></line>
                  <line x1="16" y1="17" x2="8" y2="17"></line>
                  <line x1="10" y1="9" x2="8" y2="9"></line>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="font-medium text-white mb-1">Notes</h3>
                <p class="text-gray-300 leading-relaxed break-words"><%= @business.notes %></p>
              </div>
            </div>
          <% end %>
        </div>

        <%# Business Stats %>
        <div class="mb-10">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl sm:text-2xl font-semibold text-white">
              Cleaning Assignments Statistics
            </h2>
          </div>

          <div class="flex flex-col gap-4 sm:gap-6 mb-8">
            <!-- In Progress -->
            <div class="bg-gradient-to-br from-gray-700 to-gray-800 p-6 rounded-xl border border-gray-600 hover:border-gray-500 transition-all duration-200 transform hover:scale-105">
              <div class="flex items-center justify-between mb-4">
                <div class="bg-red-600 rounded-full p-3 shadow-lg">
                  <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                </div>
                <span class="text-2xl sm:text-3xl font-bold text-white">
                  <%= @active_assignments.count %>
                </span>
              </div>
              <h3 class="font-semibold text-white mb-1">In Progress</h3>
              <p class="text-gray-400 text-sm mb-3">Active assignments</p>
              <div class="w-full bg-gray-600 rounded-full h-2">
                <div class="bg-red-600 h-2 rounded-full" style="width: <%= (@active_assignments.count.to_f / @total_assignments * 100).round %>%"></div>
              </div>
            </div>

            <!-- Completed -->
            <div class="bg-gradient-to-br from-gray-700 to-gray-800 p-6 rounded-xl border border-gray-600 hover:border-gray-500 transition-all duration-200 transform hover:scale-105">
              <div class="flex items-center justify-between mb-4">
                <div class="bg-green-600 rounded-full p-3 shadow-lg">
                  <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
                </div>
                <span class="text-2xl sm:text-3xl font-bold text-white">
                  <%= @completed_assignments.count %>
                </span>
              </div>
              <h3 class="font-semibold text-white mb-1">Completed</h3>
              <p class="text-gray-400 text-sm mb-3">Finished assignments</p>
              <div class="w-full bg-gray-600 rounded-full h-2">
                <div class="bg-green-600 h-2 rounded-full" style="width: <%= (@completed_assignments.count.to_f / @total_assignments * 100).round %>%"></div>
              </div>
            </div>

            <!-- Scheduled -->
            <div class="bg-gradient-to-br from-gray-700 to-gray-800 p-6 rounded-xl border border-gray-600 hover:border-gray-500 transition-all duration-200 transform hover:scale-105">
              <div class="flex items-center justify-between mb-4">
                <div class="bg-blue-600 rounded-full p-3 shadow-lg">
                  <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                  </svg>
                </div>
                <span class="text-2xl sm:text-3xl font-bold text-white">
                  <%= @scheduled_assignments.count %>
                </span>
              </div>
              <h3 class="font-semibold text-white mb-1">Scheduled</h3>
              <p class="text-gray-400 text-sm mb-3">Future assignments</p>
              <div class="w-full bg-gray-600 rounded-full h-2">
                <div class="bg-blue-600 h-2 rounded-full" style="width: <%= (@scheduled_assignments.count.to_f / @total_assignments * 100).round %>%"></div>
              </div>
            </div>
          </div>
        </div>

        <%# CTA Buttons %>
        <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-700">
          <%= link_to edit_business_path(@business), class: "flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 border border-red-500/30 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-800" do %>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            <span>Edit Business</span>
          <% end %>
          
          <%= button_to @business, method: :delete, class: "flex-1 bg-gray-700 hover:bg-red-600 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 border border-gray-600 hover:border-red-500 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-800", data: { turbo_confirm: "Are you sure you want to delete this business? This action cannot be undone." } do %>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
            <span>Delete Business</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

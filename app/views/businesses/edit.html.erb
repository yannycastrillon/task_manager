<% content_for :title, "Edit Business" %>

<div class="min-h-screen flex flex-col justify-center items-center bg-gradient-to-r from-indigo-100 via-purple-100 to-pink-100 px-4">
  <div class="bg-white p-8 sm:p-12 rounded-lg shadow-xl w-full max-w-screen-lg mx-auto">
    <div class="mb-8">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900">Edit Business</h1>
      <p class="mt-2 text-base sm:text-lg text-gray-600">Update your business details.</p>
    </div>

    <%= render "form", business: @business %>

    <div class="mt-8 flex space-x-4">
      <%= link_to "Show Business", @business, class: "text-indigo-600 hover:text-indigo-900 transition-colors duration-200" %>
      <%= link_to "Back to Businesses", businesses_path, class: "text-indigo-600 hover:text-indigo-900 transition-colors duration-200" %>
    </div>
  </div>
</div>

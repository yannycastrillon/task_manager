<div class="bg-gray-700 rounded-xl border border-gray-600 shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5">
  <%= link_to business_path(business), class: "block p-6" do %>
    <%# Header with Business Name and Status %>
    <div class="flex justify-between items-start mb-4">
      <h3 class="text-lg font-semibold text-white min-h-[1.5rem]"> <%# min-h to prevent layout shift %>
        <%= truncate(business.name, length: 20) %>
      </h3>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
        <%= business.status == 'active' ? 'bg-green-500/20 text-green-400 border border-green-500/30' : 'bg-red-500/20 text-red-400 border border-red-500/30' %>">
        <%= business.status.titleize %>
      </span>
    </div>

    <%# Address %>
    <div class="flex items-start text-gray-400 text-sm mb-2 min-h-[2.5rem]"> <%# min-h for consistent height %>
      <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
      </svg>
      <p class="line-clamp-2"><%= business.address.present? ? business.address : "No address provided" %></p>
    </div>

    <%# Phone %>
    <div class="flex items-center text-gray-400 text-sm mb-2">
      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
      </svg>
      <span><%= business.phone %></span>
    </div>
  <% end %> <%# End of link_to wrapper %>

  <%# Action Icons %>
  <div class="flex items-center justify-center space-x-4 pt-2 border-t border-gray-600 h-12">
    <%# View Icon %>
    <%= link_to business_path(business), class: "p-2 text-blue-400 hover:text-blue-500 hover:bg-blue-900/20 rounded-full transition-colors" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
      </svg>
    <% end %>
    
    <%# Edit Icon %>
    <%= link_to edit_business_path(business), class: "p-2 text-gray-400 hover:text-gray-500 hover:bg-gray-900/20 rounded-full transition-colors" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
      </svg>
    <% end %>
    
    <%# Delete Icon %>
    <%= button_to business, method: :delete, class: "p-2 text-red-400 hover:text-red-500 hover:bg-red-900/20 rounded-full transition-colors", data: { turbo_confirm: "Are you sure?" } do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
      </svg>
    <% end %>
  </div>
</div>

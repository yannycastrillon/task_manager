<%= form_with(model: business, class: "space-y-8 divide-y divide-gray-200") do |form| %>
  <% if business.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(business.errors.count, "error") %> prohibited this business from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc pl-5 space-y-1">
              <% business.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-8 divide-y divide-gray-200">
    <div class="pt-8">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Business Information</h3>
        <p class="mt-1 text-sm text-gray-600">This information will be displayed publicly so be careful what you share.</p>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md transition-colors duration-200 #{'border-red-300' if business.errors[:name].any?}" %>
            <% if business.errors[:name].any? %>
              <p class="mt-2 text-sm text-red-600"><%= business.errors[:name].join(", ") %></p>
            <% end %>
          </div>
        </div>

        <div class="sm:col-span-4">
          <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md transition-colors duration-200 #{'border-red-300' if business.errors[:email].any?}" %>
            <% if business.errors[:email].any? %>
              <p class="mt-2 text-sm text-red-600"><%= business.errors[:email].join(", ") %></p>
            <% end %>
          </div>
        </div>

        <div class="sm:col-span-4">
          <%= form.label :phone, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.telephone_field :phone, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md transition-colors duration-200 #{'border-red-300' if business.errors[:phone].any?}" %>
            <% if business.errors[:phone].any? %>
              <p class="mt-2 text-sm text-red-600"><%= business.errors[:phone].join(", ") %></p>
            <% end %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :status, 
                options_for_select([['Active', 'active'], ['Inactive', 'inactive']], business.status),
                {},
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md transition-colors duration-200" %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :address, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :address, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md transition-colors duration-200 #{'border-red-300' if business.errors[:address].any?}" %>
            <% if business.errors[:address].any? %>
              <p class="mt-2 text-sm text-red-600"><%= business.errors[:address].join(", ") %></p>
            <% end %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :notes, rows: 4, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md transition-colors duration-200" %>
            <p class="mt-2 text-sm text-gray-500">Write any additional notes about this business.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", businesses_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
      <%= form.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
    </div>
  </div>
<% end %>

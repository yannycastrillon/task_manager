<%= form_with(model: business, class: "space-y-6 bg-gray-800 p-8 rounded-xl shadow-xl border border-gray-700") do |form| %>
  <% if business.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(business.errors.count, "error") %> prohibited this business from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% business.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :name, class: "block text-base font-medium text-gray-300 mb-2" %>
      <div class="mt-1">
        <%= form.text_field :name, 
            class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
      </div>
    </div>

    <div>
      <%= form.label :email, class: "block text-base font-medium text-gray-300 mb-2" %>
      <div class="mt-1">
        <%= form.email_field :email, 
            class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
      </div>
    </div>

    <div>
      <%= form.label :phone, class: "block text-base font-medium text-gray-300 mb-2" %>
      <div class="mt-1">
        <%= form.telephone_field :phone, 
            class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
      </div>
    </div>

    <div>
      <%= form.label :status, class: "block text-base font-medium text-gray-300 mb-2" %>
      <div class="mt-1">
        <%= form.select :status, 
            options_for_select([['Active', 'active'], ['Inactive', 'inactive']], business.status),
            {},
            class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
      </div>
    </div>

    <div>
      <%= form.label :address, class: "block text-base font-medium text-gray-300 mb-2" %>
      <div class="mt-1">
        <%= form.text_area :address, rows: 3,
            class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
      </div>
    </div>

    <div>
      <%= form.label :notes, class: "block text-base font-medium text-gray-300 mb-2" %>
      <div class="mt-1">
        <%= form.text_area :notes, rows: 4,
            class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
        <p class="mt-2 text-sm text-gray-500">Write any additional notes about this business.</p>
      </div>
    </div>
  </div>

  <div class="pt-8">
    <div class="flex justify-end space-x-4">
      <%= link_to "Cancel", businesses_path, class: "rounded-md border border-gray-600 bg-gray-700 py-3 px-6 text-base font-medium text-gray-300 shadow-sm hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800" %>
      <%= form.submit class: "inline-flex justify-center rounded-md border border-transparent bg-blue-600 py-3 px-6 text-base font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800" %>
    </div>
  </div>
<% end %>

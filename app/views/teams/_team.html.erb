<div class="bg-gray-700 rounded-xl border border-gray-600 shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5">
  <%= link_to team_path(team), class: "block p-6" do %>
    <%# Header with Team Name and Members Count %>
    <div class="flex justify-between items-start mb-4">
      <h3 class="text-lg font-semibold text-white">
        <%= team.name %>
      </h3>
    </div>

    <%# Description (optional) %>
    <div class="flex items-start text-gray-300 text-sm mb-4 min-h-[2.5rem]"> <%# min-h-[2.5rem] ensures space for two lines of text-sm %>
      <svg class="h-4 w-4 mr-1.5 mt-0.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
      </svg>
      <div class="flex-1"> <%# Allows text to take remaining space %>
        <% if team.description.present? %>
          <p class="line-clamp-2"><%= team.description %></p>
        <% else %>
          <p class="italic text-gray-500">No description provided.</p>
        <% end %>
      </div>
    </div>

    <%# Members %>
    <div class="flex items-center text-gray-400 text-sm mb-4">
      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
      </svg>
      <span class="mr-2">total:</span>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
        <%= pluralize(team.team_memberships.count, 'member') %>
      </span>
    </div>
  <% end %> <%# End of link_to wrapper %>

  <%# Action Icons %>
  <div class="flex items-center justify-center space-x-4 pt-2 border-t border-gray-600 h-12">
    <%# View Icon %>
    <%= link_to team_path(team), class: "p-2 text-blue-400 hover:text-blue-500 hover:bg-blue-900/20 rounded-full transition-colors" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
      </svg>
    <% end %>
    
    <%# Edit Icon %>
    <%= link_to edit_team_path(team), class: "p-2 text-gray-400 hover:text-gray-500 hover:bg-gray-900/20 rounded-full transition-colors" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
      </svg>
    <% end %>
    
    <%# Delete Icon %>
    <%= button_to team, method: :delete, class: "p-2 text-red-400 hover:text-red-500 hover:bg-red-900/20 rounded-full transition-colors", data: { turbo_confirm: "Are you sure?" } do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
      </svg>
    <% end %>
  </div>
</div>

<% content_for :title, "Team Details" %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <%# Header Card %>
    <div class="bg-gray-800 rounded-2xl shadow-2xl border border-gray-700 overflow-hidden">
      <%# Team Title %>
      <div class="bg-gradient-to-r from-gray-900 via-slate-900 to-gray-900 px-6 sm:px-8 py-8 sm:py-12 text-center relative">
        <div class="absolute inset-0 bg-red-600/10 via-transparent to-red-600/10"></div>
        <div class="relative">
          <div class="flex justify-center mb-4">
            <div class="bg-red-600/20 backdrop-blur-sm rounded-full p-4 border border-red-500/30">
              <svg class="w-8 sm:w-10 h-8 sm:h-10 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
          </div>
          <h1 class="text-2xl sm:text-4xl font-bold text-white mb-2">
            <%= @team.name %>
          </h1>
          <div class="w-24 h-1 bg-red-600 mx-auto rounded-full"></div>
          <p class="text-gray-400 text-sm mt-4">Last updated <%= @team.updated_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>

      <%# Team Details Content %>
      <div class="p-6 sm:p-8 bg-gray-800">
        <%# Quick Actions Bar %>
        <div class="flex flex-wrap gap-2 mb-8 p-4 bg-gray-700/30 rounded-xl border border-gray-600/50 justify-between items-center">
          <%= link_to edit_team_path(@team), class: "flex items-center space-x-2 px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors text-sm text-gray-300" do %>
            <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            <span>Edit Team</span>
          <% end %>
          
          <%# Status Badge %>
          <% if @team.status == 'active' %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-500/20 text-green-400 border border-green-500/30">
              <div class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></div>
              Active
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-700/30 text-gray-400 border border-gray-600/50">
              <div class="w-2 h-2 bg-gray-400 rounded-full mr-2"></div>
              Inactive
            </span>
          <% end %>
        </div>

        <h2 class="text-xl sm:text-2xl font-semibold text-white mb-6 flex items-center">
          Team Information
        </h2>
        
        <div class="grid gap-4 sm:gap-6 mb-10">
          <%# Team Info Cards %>
          <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
            <div class="bg-red-600/20 rounded-full p-3 border border-red-500/30 group-hover:bg-red-600/30 transition-colors">
              <svg class="w-5 h-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-white mb-1">Name</h3>
              <p class="text-gray-300 leading-relaxed break-words"><%= @team.name %></p>
            </div>
          </div>

          <% if @team.description.present? %>
            <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
              <div class="bg-red-600/20 rounded-full p-3 border border-red-500/30 group-hover:bg-red-600/30 transition-colors">
                <svg class="w-5 h-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                  <polyline points="14 2 14 8 20 8"></polyline>
                  <line x1="16" y1="13" x2="8" y2="13"></line>
                  <line x1="16" y1="17" x2="8" y2="17"></line>
                  <line x1="10" y1="9" x2="8" y2="9"></line>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="font-medium text-white mb-1">Description</h3>
                <p class="text-gray-300 leading-relaxed break-words"><%= @team.description %></p>
              </div>
            </div>
          <% end %>

          <div class="flex items-start space-x-4 p-4 bg-gray-700/50 rounded-xl border border-gray-600 hover:bg-gray-700 transition-all duration-200 group">
            <div class="bg-red-600/20 rounded-full p-3 border border-red-500/30 group-hover:bg-red-600/30 transition-colors">
              <svg class="w-5 h-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-white mb-1">Created</h3>
              <p class="text-gray-300 leading-relaxed break-words"><%= @team.created_at.strftime("%B %d, %Y") %></p>
            </div>
          </div>
        </div>

        <%# Team Members %>
        <div class="mb-10">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl sm:text-2xl font-semibold text-white">
              Team Members
            </h2>
            <%= link_to edit_team_path(@team), class: "inline-flex items-center space-x-2 px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors text-sm text-gray-300" do %>
              <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
              <span>Manage Members</span>
            <% end %>
          </div>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
            <% if @team.users.any? %>
              <% @team.users.each do |user| %>
                <%= render "shared/user_card", user: user, team: @team %>
              <% end %>
            <% else %>
              <p class="text-gray-500">No team members assigned yet.</p>
            <% end %>
          </div>
        </div>

        <%# Task Statistics %>
        <div class="mb-10">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl sm:text-2xl font-semibold text-white">
              Task Statistics
            </h2>
          </div>
          
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
            <div class="bg-gradient-to-br from-gray-700 to-gray-800 p-6 rounded-xl border border-gray-600 hover:border-gray-500 transition-all duration-200 transform hover:scale-105">
              <div class="flex items-center justify-between mb-4">
                <div class="bg-red-600 rounded-full p-3 shadow-lg">
                  <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                </div>
                <span class="text-2xl sm:text-3xl font-bold text-white">
                  <%= @team.tasks.in_progress.count %>
                </span>
              </div>
              <h3 class="font-semibold text-white mb-1">In Progress</h3>
              <p class="text-gray-400 text-sm mb-3">Active tasks</p>
              <div class="w-full bg-gray-600 rounded-full h-2">
                <div class="bg-red-600 h-2 rounded-full" style="width: <%= (@team.tasks.in_progress.count.to_f / @team.tasks.count * 100).round %>% "></div>
              </div>
            </div>

            <div class="bg-gradient-to-br from-gray-700 to-gray-800 p-6 rounded-xl border border-gray-600 hover:border-gray-500 transition-all duration-200 transform hover:scale-105">
              <div class="flex items-center justify-between mb-4">
                <div class="bg-green-600 rounded-full p-3 shadow-lg">
                  <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
                </div>
                <span class="text-2xl sm:text-3xl font-bold text-white">
                  <%= @team.tasks.completed.count %>
                </span>
              </div>
              <h3 class="font-semibold text-white mb-1">Completed</h3>
              <p class="text-gray-400 text-sm mb-3">Finished tasks</p>
              <div class="w-full bg-gray-600 rounded-full h-2">
                <div class="bg-green-600 h-2 rounded-full" style="width: <%= (@team.tasks.completed.count.to_f / @team.tasks.count * 100).round %>% "></div>
              </div>
            </div>

            <div class="bg-gradient-to-br from-gray-700 to-gray-800 p-6 rounded-xl border border-gray-600 hover:border-gray-500 transition-all duration-200 transform hover:scale-105">
              <div class="flex items-center justify-between mb-4">
                <div class="bg-blue-600 rounded-full p-3 shadow-lg">
                  <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                  </svg>
                </div>
                <span class="text-2xl sm:text-3xl font-bold text-white">
                  <%= @team.tasks.not_started.count %>
                </span>
              </div>
              <h3 class="font-semibold text-white mb-1">Not Started</h3>
              <p class="text-gray-400 text-sm mb-3">Tasks yet to begin</p>
              <div class="w-full bg-gray-600 rounded-full h-2">
                <div class="bg-blue-600 h-2 rounded-full" style="width: <%= (@team.tasks.not_started.count.to_f / @team.tasks.count * 100).round %>% "></div>
              </div>
            </div>
          </div>
        </div>

        <%# CTA Buttons %>
        <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-700">
          <%= link_to edit_team_path(@team), class: "flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 border border-red-500/30 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-800" do %>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            <span>Edit Team</span>
          <% end %>
          
          <%= button_to @team, method: :delete, class: "flex-1 bg-gray-700 hover:bg-red-600 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 border border-gray-600 hover:border-red-500 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-800", data: { turbo_confirm: "Are you sure you want to delete this team? This action cannot be undone." } do %>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
            <span>Delete Team</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

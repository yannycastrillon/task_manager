<% content_for :title, "Set New Password" %>

<div class="min-h-screen flex flex-col justify-center items-center bg-gray-900 px-4">
  <div class="bg-gray-800 p-8 rounded-xl shadow-xl border border-gray-700 w-full max-w-md mx-auto">
    <h1 class="text-3xl font-extrabold text-white mb-6 text-center">Set New Password</h1>
    <p class="text-base text-gray-400 mb-8 text-center">Please enter your new password below.</p>

    <%= form_with url: password_path, method: :patch, class: "space-y-6" do |form| %>
      <%= form.hidden_field :token, value: params[:token] %>
      <div>
        <%= form.label :password, class: "block text-base font-medium text-gray-300 mb-2" %>
        <div class="mt-1">
          <%= form.password_field :password, required: true, class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
        </div>
      </div>
      <div>
        <%= form.label :password_confirmation, class: "block text-base font-medium text-gray-300 mb-2" %>
        <div class="mt-1">
          <%= form.password_field :password_confirmation, required: true, class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
        </div>
      </div>
      <div class="flex items-center justify-between">
        <%= link_to "Back to Sign In", new_session_path, class: "text-sm text-blue-400 hover:text-blue-200 transition-colors duration-200" %>
        <%= form.submit "Update Password", class: "inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
      </div>
    <% end %>
  </div>
</div>
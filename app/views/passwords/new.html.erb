<% content_for :title, "Reset Password" %>

<div class="min-h-screen flex flex-col justify-center items-center bg-gradient-to-r from-indigo-100 via-purple-100 to-pink-100 px-4">
  <div class="bg-white p-8 sm:p-12 rounded-lg shadow-xl w-full max-w-screen-lg mx-auto">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 mb-4">Reset Password</h1>
        <p class="text-base sm:text-lg text-gray-600">Enter your email address and we'll send you a link to reset your password.</p>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
      <div class="p-6">
        <%= form_with url: passwords_path, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.email_field :email, required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <%= link_to "Back to Sign In", sign_in_path, class: "text-sm text-indigo-600 hover:text-indigo-900 transition-colors duration-200" %>
            <%= form.submit "Send Reset Instructions", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
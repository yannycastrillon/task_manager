<% content_for :title, "Sign In" %>

<div class="min-h-screen flex flex-col justify-center items-center bg-gray-900 px-4">
  <div class="bg-gray-800 p-8 rounded-xl shadow-xl border border-gray-700 w-full max-w-md mx-auto">
    <h1 class="text-3xl font-extrabold text-white mb-6 text-center">Sign In</h1>
    <p class="text-base text-gray-400 mb-8 text-center">Welcome back! Please sign in to your account.</p>

    <%= form_with url: session_path, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email, class: "block text-base font-medium text-gray-300 mb-2" %>
        <div class="mt-1">
          <%= form.email_field :email, required: true, class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
        </div>
      </div>

      <div>
        <%= form.label :password, class: "block text-base font-medium text-gray-300 mb-2" %>
        <div class="mt-1">
          <%= form.password_field :password, required: true, class: "block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-3 px-4" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= form.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :remember_me, class: "ml-2 block text-sm text-gray-300" %>
        </div>
        <%= link_to "Forgot your password?", new_password_path, class: "text-sm text-blue-400 hover:text-blue-200 transition-colors duration-200" %>
      </div>

      <div>
        <%= form.submit "Sign In", class: "w-full flex justify-center py-3 px-6 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
      </div>
    <% end %>

    <div class="mt-8">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-600"></div>
        </div>
        <div class="relative flex justify-center text-base">
          <span class="px-2 bg-gray-800 text-gray-400">Or</span>
        </div>
      </div>
      <div class="mt-6">
        <%= link_to "Sign up", session_path, class: "w-full flex justify-center py-3 px-6 border border-gray-600 rounded-md shadow-sm text-base font-medium text-gray-300 bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition-colors duration-200" %>
      </div>
    </div>
  </div>
</div>